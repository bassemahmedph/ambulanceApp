<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SignIn">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <ImageButton
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/btnImgId"
        android:background="@color/white"
        android:layout_width="45dp"

        android:layout_height="45dp"
        android:src="@drawable/ic_keyboard_backspace_black_24dp" />

</LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:text="Sign in"
           android:textAppearance="@style/TextAppearance.AppCompat.Body1"
           android:textColor="@color/black"
           android:textSize="23dp"

           android:textStyle="bold" />

   </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgid"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/iconappfin"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txtWelcomeId"
            android:layout_below="@id/imgid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textColor="@color/darkgray"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtWelcomeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login to continue using Ambulance"
            android:textColor="@color/lightgray"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/emailId"
            android:textColor="@color/black"
            android:layout_above="@id/passwordId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp"

            />
        <EditText

            android:layout_above="@id/btnLoginId"
            android:id="@+id/passwordId"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"

            />
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/btnLoginId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ambulanceapp"
            android:text="Log in"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat" />

    </RelativeLayout>

</LinearLayout>